<!-- todo.erb -->
<header>
  <div id='header-left'>
    <h2><%= @todo.keys[0] %></h2>
    <% if !(@todo.values[0].empty?) %>
      <h3>Deadline: <%= @todo.values[0] %></h3>
    <% end %>
    <h4>Update Todo!</h4>
  </div>
</header>

<section class='todo-container'>
  <div>
    <form action="/todos/<%= @id %>" method="POST" class="form">
      <input type='hidden' name='_method' value='put'>
      <input type="text" name="title" value="<%= @todo.keys[0] %>"/>
      <div class='btn-container'>
      <a class='btn' href='/todos'>ï¸ŽBack</a>
      <input class='btn-submit' type='submit' value='save changes'></div>
    </form>
  </div>
</section>